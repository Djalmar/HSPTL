<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MenuActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical" >

	    <Button
	        android:id="@+id/btnPersonal"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_alignParentTop="true"
	        android:onClick="personalView"
	        android:text="Personal"
	        android:visibility="visible" />
	
	    <Button
	        android:id="@+id/btnPatients"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_alignParentTop="true"
	        android:onClick="pacientView"
	        android:text="Patients" />

		<Button
		    android:id="@+id/btnUsers"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignParentLeft="true"
		    android:layout_alignParentTop="true"
		    android:onClick="peopleView"
		    android:text="Users"
		    android:visibility="visible" />
	
	    <Button
	        android:id="@+id/btnConsult"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_alignParentTop="true"
	        android:onClick="consultView"
	        android:text="Consult" />

	    <Button
	        android:id="@+id/btnPeople"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:onClick="peopleView"
	        android:text="People" />

	    <Button
	        android:id="@+id/btnHospitalize"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:onClick="hospitalizeView"
	        android:text="Hospitalize" />

    </LinearLayout>

</RelativeLayout>
